{
  "name": "backend",
  "version": "1.0.0",
  "description": "This will be the REST API that handles image fetching and uploading",
  "main": "index.js",
  "scripts": {
    "dev": "tsx --watch --env-file .env src/index.ts",
    "start": "node dist/src/index.js",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "image",
    "backend",
    "REST"
  ],
  "author": "Angelo Ian Miguel R. Daniel",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "exifr": "^7.1.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.1",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.17.2",
    "pg-promise": "^12.3.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tsconfig/node22": "^22.0.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/eslint-plugin": "^1.6.6",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-perfectionist": "^5.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prisma": "^7.3.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "imports": {
    "#*": "./src/*"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  }
}
